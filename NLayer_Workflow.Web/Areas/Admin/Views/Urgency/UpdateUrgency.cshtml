@model UrgencyUpdateViewModel
@{
    ViewData["Title"] = "UpdateUrgency";
}

<form asp-action="UpdateUrgency" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="Id"   />
    <div class="form-group">
        <label asp-for="Description"></label>
        <span class="text-danger" asp-validation-for="Description"></span>
        <input class="form-control" type="text" asp-for="Description" />
    </div>
    <button type="submit" class="btn btn-info btn-sm">Save</button>
</form>

@section Scripts{
    <script src="~/js/jquery/jq-unobtrusive/jquery.validate.min.js"></script>
    <script src="~/js/jquery/jq-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}