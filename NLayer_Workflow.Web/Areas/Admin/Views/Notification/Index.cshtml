@model List<NotificationListDto>
@{
    ViewData["Title"] = "Index";
}


<ul class="list-group mt-5">
    @foreach (var notify in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @notify.Description
            @if (!notify.IsRead)
            {
                <a class="btn btn-primary btn-sm rounded" asp-action="Read" asp-route-id="@notify.Id"><i class="fas fa-check mr-2"></i>Okundu olarak işaretle</a>
            }
            else
            {
                <span class="badge badge-secondary badge-pill">Okundu</span>
            }

        </li>
    }

</ul>
