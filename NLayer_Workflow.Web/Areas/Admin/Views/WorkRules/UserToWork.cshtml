@model UserToWorkListModel

@{
    ViewData["Title"] = "UserToWork";
}

<div class="row">
    <div class="col-md-12">
        <p class="lead">Aşağıdaki göreve ilgili personel atanacaktır. Bu işlemi onaylıyor musunuz ?</p>
        <form asp-action="UserToWork" method="post">
            <div class="form-group text-center">
                <input type="hidden" name="UserId" value="@Model.AppUser.Id" />
                <input type="hidden" name="WorkId" value="@Model.Work.Id" />
                <a class="btn  btn-warning" asp-action="WorkDetail" asp-route-id="@Model.Work.Id">Hayır Vazgeç</a>
                <button type="submit" class="btn  btn-primary">Evet Görevlendir</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="text-center lead">Görev Bilgileri</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Work.Name</h5>
                <p class="card-text">
                    @Model.Work.Description
                </p>
                <p class="card-text">
                    <strong>Aciliyet Durumu</strong> <span class="badge badge-info">@Model.Work.Urgency.Description</span>
                </p>
                <small class="text-muted font-italic">@((DateTime.Now-Model.Work.CreatedDate).Days.ToString()) days ago</small>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card shadow mb-3">
            <div class="card-header">
                <h4 class="text-center lead">Personel Bilgileri</h4>
            </div>
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/img/@Model.AppUser.Picture" class="w-100 img-fluid" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.AppUser.UserName</h5>
                        <p class="card-text"><getWorksAppUserId user-id="@Model.AppUser.Id"></getWorksAppUserId></p>
                        <p class="card-text"><span class="badge badge-info">Member</span></p>
                        <p class="card-text"><small class="text-muted">@Model.AppUser.Email</small></p>
                        @*<a class="btn btn-sm btn-primary" asp-action="UserToWork" asp-route-WorkId="@Model.Work.Id" asp-route-UserId="@Model.AppUser.Id">Görevlendir</a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


