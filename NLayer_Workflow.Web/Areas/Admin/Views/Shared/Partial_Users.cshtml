@model PaginationListUserModel

    <span id="pageCount" data-pageCount="@Model.PageCount"></span>
    <div class="row">
        <div class="col-md-12">
            @foreach (var item in Model.Users)
            {
                <div class="card mb-3">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="~/img/@item.Picture" class="w-100 img-fluid" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.UserName</h5>
                                <p class="card-text"><getWorksAppUserId user-id="@item.Id"></getWorksAppUserId></p>
                                <p class="card-text"><span class="badge badge-info">Member</span></p>
                                <p class="card-text"><small class="text-muted">@item.Email</small></p>
                                <a class="btn btn-sm btn-primary" asp-action="UserToWork" asp-route-WorkId="@Model.WorkId" asp-route-UserId="@item.Id">Görevlendir</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>



